<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/label_header_textview"
        android:layout_width="fill_parent"
        android:layout_height="17dp"
        android:lines="1"
        android:textColor="#ffffff"
        android:textSize="0sp" />

    <ImageView
        android:id="@+id/songlist_imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/label_header_textview" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/label_header_textview"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/songlist_imageView"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/song_textView"
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:layout_weight="8"
                android:paddingRight="10dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="I"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/song_duration_textView"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="3"
                android:lines="1"
                android:maxLength="5"
                android:gravity="right"
                android:text="I"
                android:textColor="#a69b9b"
                android:paddingRight="3dp"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/song_artist_textView"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="I"
                android:textColor="#a69b9b"
                android:paddingRight="3dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/song_album_textView"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="I"
                android:textColor="#a69b9b"
                android:gravity="right"
                android:paddingRight="3dp"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>