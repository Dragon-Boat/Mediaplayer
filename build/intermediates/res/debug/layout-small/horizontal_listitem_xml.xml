<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_back"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/playlist_name_textView"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="I"
            android:layout_alignParentLeft="true"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <Button
            android:id="@+id/playlist_adapter_edit_button"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/playlist_name_textView"
            android:layout_alignBottom="@+id/playlist_name_textView"
            android:layout_marginRight="5dp"
            android:background="@drawable/edit_button_custom" />
        
    </RelativeLayout>

    <com.devsmart.android.ui.HorizontalListView
        android:id="@+id/horizontal_listview"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent" />

</LinearLayout><!-- From: file:/home/shrikanth/android-projects/Mediaplayer/res/layout-small/horizontal_listitem_xml.xml -->